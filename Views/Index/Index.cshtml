<header class="compact">
	<h2 id="headercontrols" class="headercontrols visible">
		<span id="user" class="user" style="display:none;">Welcome, User!</span>
		<a id="signup" href="">Sign Up</a>
		<a id="signin" href="">Sign In</a>
		<a id="accounts" href="" style="display:none;">Accounts</a>
		<a id="settings" href="" style="display:none;">Settings</a>
		<a id="signout" href="" style="display:none;">Sign Out</a>
	</h2>
	<a href="javascript:void(0)" onclick="return Reload();"><h1 id="logo" class="logo">Jogtracks</h1></a>
</header>

<div id="main" class="main-content">

	<div class="welcome page">
		<div class="splashBox">
			<div class="splashText">
				<h4 class="splash">Track your jogs and get free coaching!</h4>
			</div>
			<img class="splash" src="/images/jogging-silhouettes-grunge-background.jpg"/>
		</div>
		<p><a href="https://www.vexels.com/vectors/preview/71484/jogging-silhouettes-grunge-background"> Jogging silhouettes grunge background </a> | designed by Vexels</p>
	</div>

	<div class="auth page">
		<div id="authMessage" class="message"></div>
		<div class="group">
			<form name="authForm" autocomplete="off">
				<ul class="formdefault">
					<li>
						<label>Username <span class="required">*</span></label>
						<input type="text" id="username" name="username" class="field"/>
						<label id="username-taken" style="display: none;" class="error"></label>
					</li>
					<li>
						<label>Password <span class="required">*</span></label>
						<input type="password" id="password" name="password" class="field"/>
					</li>
					<li id="confirm">
						<label>Confirm Password <span class="required">*</span></label>
						<input type="password" id="cpassword" name="cpassword" class="field"/>
					</li>
					<li>
						<input type="submit" value="Submit"/>
					</li>
				</ul>
			</form>
		</div>
	</div>

	<div class="accounts page">
		<div class="message">Accounts</div>
		<div class="group">
			<div class="messageLeft">Add Account</div>
			<div id="addAccountMessage" class="messageColor" style="display: none;"></div>
			<form name="addAccountForm" autocomplete="off">
				<ul class="formdefault">
					<li>
						<label>Username <span class="required">*</span></label>
						<input type="text" id="aausername" name="aausername" class="field"/>
						<label id="aausername-taken" style="display: none;" class="error"></label>
					</li>
					<li>
						<label>Password <span class="required">*</span></label>
						<input type="password" id="aapassword" name="aapassword" class="field"/>
					</li>
					<li id="confirm">
						<label>Confirm Password <span class="required">*</span></label>
						<input type="password" id="aacpassword" name="aacpassword" class="field"/>
					</li>
					<li>
						<input type="submit" value="Submit"/>
					</li>
				</ul>
			</form>
		</div>
		<div class="group">
			<div class="messageLeft">Update Account Type</div>
			<div id="updateAccountMessage" class="messageColor" style="display: none;"></div>
			<form name="updateAccountForm" autocomplete="off">
				<ul class="formdefault">
					<li id="updateAccountSelect">
						<!-- Keeping the label on the select centers the placeholder. -->
						<label><select id="updateAccountSelectControl"></select></label>
						<label id="updateAccount-select" style="display: none;" class="error"></label>
					</li>
					<li id="accountType">
						<label>Account Type <span class="required">*</span></label>
						<label><input id="jogger" type="radio" name="accountType" value="JOGGER" checked> Jogger</label>
						<label><input id="coach" type="radio" name="accountType" value="COACH"> Coach</label>
						<label><input id="coach" type="radio" name="accountType" value="ADMIN"> Admin</label>
					</li>
					<li>
						<input type="submit" value="Update"/>
					</li>
				</ul>
			</form>
		</div>
		<div class="group">
			<div class="messageLeft">Change Account Password</div>
			<div id="cpAccountMessage" class="messageColor" style="display: none;"></div>
			<form name="cpAccountForm" autocomplete="off">
				<ul class="formdefault">
					<li id="cpAccountSelect">
						<!-- Keeping the label on the select centers the placeholder. -->
						<label><select id="cpAccountSelectControl"></select></label>
						<label id="cpAccount-select" style="display: none;" class="error"></label>
					</li>
					<li>
						<label>New Password <span class="required">*</span></label>
						<input type="password" id="aChangePassword" name="aChangePassword" class="field"/>
					</li>
					<li id="confirm">
						<label>Confirm New Password <span class="required">*</span></label>
						<input type="password" id="acChangePassword" name="acChangePassword" class="field"/>
					</li>
					<li>
						<input type="submit" value="Submit"/>
					</li>
				</ul>
			</form>
		</div>
		<div class="group">
			<div class="messageLeft">Delete Account</div>
			<div id="deleteAccountMessage" class="messageColor" style="display: none;"></div>
			<form name="deleteAccountForm" autocomplete="off">
				<ul class="formdefault">
					<li id="deleteAccountSelect">
						<!-- Keeping the label on the select centers the placeholder. -->
						<label><select id="deleteAccountSelectControl"></select></label>
						<label id="deleteAccount-select" style="display: none;" class="error"></label>
					</li>
					<li>
						<input type="submit" value="Delete"/>
					</li>
				</ul>
			</form>
		</div>
		<div><a id="accountsDone" href="">Done</a></div>
	</div>

	<div class="settings page">
		<div class="message">Settings</div>
		<div class="group">
			<div class="messageLeft">Account Type</div>
			<div id="accountTypeMessage" class="messageLeftSmall"></div>
		</div>
		<div class="group">
			<div class="messageLeft">Change Password</div>
			<div id="changePasswordMessage" class="messageColor" style="display: none;">Your password has been changed!</div>
			<form name="changePasswordForm" autocomplete="off">
				<ul class="formdefault">
					<li>
						<label>New Password <span class="required">*</span></label>
						<input type="password" id="changePassword" name="changePassword" class="field"/>
					</li>
					<li id="confirm">
						<label>Confirm New Password <span class="required">*</span></label>
						<input type="password" id="changecPassword" name="changecPassword" class="field"/>
					</li>
					<li>
						<input type="submit" value="Submit"/>
					</li>
				</ul>
			</form>
		</div>
		<div><a id="settingsDone" href="">Done</a></div>
	</div>
	
	<div class="all-jogs page">
		<div class="newJog">
			<button id="newJog">Add New Jog</button>
		</div>
		<div class="controls filter">
			<form autocomplete="off">
				<span>Date Filter</span>
				<label><input id="fromDate" type="text" readonly="true"> From Date</label>
				<label><input id="toDate" type="text" readonly="true"> To Date</label>
			</form>
			<button id="filterRefresh">Refresh</button>
			<button id="filterClear">Clear</button>
		</div>
		<div id="report" class="controls report">
			<form>
				<span>Report</span>
				<label>Average Distance:</label>
				<div id="averageDistance" class="average"></div>
				<label>Average Time:</label>
				<div id="averageTime" class="average"></div>
				<label>Average Speed:</label>
				<div id="averageSpeed" class="average"></div>
			</form>
		</div>
		<h3 ><span id="jogsMessage1"></span><span id="jogsMessage2"></span></h3>
		<ul class="jogs-list"></ul>
		<script id="jogs-template" type="x-handlebars-template">â€‹
			{{#each this}}
				<li data-index="{{Id}}">
					<h2 style="background-color: {{UserColor}};"><a href="#">{{Date}}</a></h2>
					<ul class="jog-description">
						<li><span>Jogger: </span>{{UserName}}</li>
						<li><span>Distance: </span>{{Distance}} km</li>
						<li><span>Time: </span>{{TimeString}}</li>
						<li><span>Average Speed: </span>{{AverageSpeed}} km/h</li>
					</ul>
					<!--<div class="highlight"></div>-->
				</li>
			{{/each}}
		</script>
	</div>

	<div class="single-jog page">
		<div class="overlay"></div>
		<div class="singleView">
			<h3 id="updateHeading"></h3>
			<div>
				<form name="jogEditForm" autocomplete="off">
					<ul class="formdefault singleForm">
						<input type="hidden" id="updateId"/>
						<li id="userSelect">
							<label>User <span class="required">*</span></label>
							<label><select id="userSelectControl"></select></label>
							<label id="userSelectLabel" style="display: none;" class="error"></label>
						</li>
						<li>
							<label>Date <span class="required">*</span></label>
							<input type="text" id="updateDate" name="updateDate" class="field" readonly="true"/>
						</li>
						<li>
							<label>Distance (km) <span class="required">*</span></label>
							<input type="text" id="updateDistance" name="updateDistance" class="field"/>
						</li>
						<li>
							<label>Time (HH:MM:SS) <span class="required">*</span></label>
							<input type="text" id="updateTime" name="updateTime" class="field"/>
						</li>
						<li style="margin-top: 15px;">
							<input id="singleSubmit" type="submit" value=""/>&nbsp;&nbsp;
							<input id="singleDelete" type="button" value="Delete"/>&nbsp;&nbsp;
							<input id="singleCancel" type="button" value="Cancel"/>
						</li>
					</ul>
				</form>
			</div>
		</div>
	</div>

	<div class="errorMessage page">
		<h3 id="errorMessage"></h3>
		<div><a id="errorBack" href="">Back</a></div>
	</div>

</div>